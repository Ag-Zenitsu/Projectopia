@model Projectopia.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Project
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">Warning!</h5>
                        <p class="mb-0">Are you sure you want to delete this project? This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="text-primary">Project Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Project Name</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Project ID</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Details</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Details))
                                    {
                                        @Model.Details
                                    }
                                    else
                                    {
                                        <span class="text-muted">No details available</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">Impact Summary</h6>
                                    <p class="mb-1"><strong>Supervisors:</strong> @(Model.SupervisorProjects?.Count ?? 0)</p>
                                    <p class="mb-0"><strong>Students:</strong> @(Model.ProjectStudents?.Count ?? 0)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.SupervisorProjects?.Any() == true)
                    {
                        <div class="mt-3">
                            <h6 class="text-warning">Supervisors to be removed:</h6>
                            <ul class="list-unstyled">
                                @foreach (var sp in Model.SupervisorProjects)
                                {
                                    <li><i class="fas fa-user-tie text-primary"></i> @sp.Supervisor.FullName</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (Model.ProjectStudents?.Any() == true)
                    {
                        <div class="mt-3">
                            <h6 class="text-warning">Students to be removed:</h6>
                            <ul class="list-unstyled">
                                @foreach (var ps in Model.ProjectStudents)
                                {
                                    <li><i class="fas fa-user-graduate text-success"></i> @ps.Student.FullName</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Project
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>