@model Projectopia.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">
                        <i class="fas fa-user-times"></i> Delete User
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">Warning!</h5>
                        <p class="mb-0">Are you sure you want to delete this user? This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="text-primary">User Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Full Name</dt>
                                <dd class="col-sm-8">@Model.FullName</dd>

                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">User ID</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Phone Number</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        @Model.PhoneNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">User Type</h6>
                                    <p class="mb-0">
                                        @if (Model is Projectopia.Models.Admin)
                                        {
                                            <span class="badge bg-danger">Admin</span>
                                        }
                                        else if (Model is Projectopia.Models.Supervisor)
                                        {
                                            <span class="badge bg-warning">Supervisor</span>
                                        }
                                        else if (Model is Projectopia.Models.Student)
                                        {
                                            <span class="badge bg-info">Student</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">User</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Impact:</strong> Deleting this user will remove all their associated data including:
                        <ul class="mb-0 mt-2">
                            <li>Project assignments</li>
                            <li>User profile information</li>
                            <li>All related records</li>
                        </ul>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="DeleteUser" method="post">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Users" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
