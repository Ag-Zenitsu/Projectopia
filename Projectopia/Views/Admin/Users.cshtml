@model IEnumerable<Projectopia.ViewModels.UserListViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-users"></i> Manage Users</h1>
        <a asp-action="CreateUser" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New User
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> No users found.
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>User Type</th>
                                <th>Phone Number</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@user.FullName</strong>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        <span class="badge bg-primary">@user.UserType</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                        {
                                            @user.PhoneNumber
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not provided</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Locked</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="ToggleUserStatus" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-info btn-sm" 
                                                        onclick="return confirm('Are you sure you want to change this user\'s status?')">
                                                    @if (user.IsActive)
                                                    {
                                                        <i class="fas fa-lock"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-unlock"></i>
                                                    }
                                                </button>
                                            </form>
                                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
