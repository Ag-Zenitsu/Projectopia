@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white text-center py-5 mb-5">
                <h1 class="display-4">
                    <i class="fas fa-project-diagram"></i> Welcome to Projectopia
                </h1>
                <p class="lead">A comprehensive project management system for academic institutions</p>
                <hr class="my-4">
                <p>Manage projects, supervise students, and collaborate effectively in your academic environment.</p>
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="d-flex justify-content-center gap-3">
                        <a class="btn btn-light btn-lg" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus"></i> Get Started
                        </a>
                        <a class="btn btn-outline-light btn-lg" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt"></i> Sign In
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-tie fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">For Supervisors</h5>
                    <p class="card-text">
                        Manage multiple projects, assign students, and track progress efficiently.
                        Access comprehensive project overviews and student performance metrics.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-graduate fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">For Students</h5>
                    <p class="card-text">
                        View your assigned projects, collaborate with supervisors, and track your progress.
                        Access project details and communicate effectively with your team.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-tachometer-alt fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">For Administrators</h5>
                    <p class="card-text">
                        Full system control with user management, project oversight, and comprehensive analytics.
                        Monitor system health and manage all aspects of the platform.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h4 class="mb-0"><i class="fas fa-star"></i> Key Features</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Role-based access control</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Project assignment and management</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Student-supervisor relationships</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Comprehensive project tracking</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Secure authentication system</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Responsive design for all devices</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Real-time project updates</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>User-friendly interface</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>